<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.platon.browser.dao.custommapper.CustomConfigMapper">
    <update id="rotateConfig" >
        <foreach collection="list" item="item">
            UPDATE
            `config`
            SET
            `stale_value` = <if test="item.staleValue==''">`value`</if><if test="item.staleValue!=''">#{item.staleValue}</if>,
            `value` = #{item.value}
            WHERE `module` = #{item.module}
            AND `name` = #{item.name};
        </foreach>
    </update>
</mapper>